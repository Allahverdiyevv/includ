@model List<Slider>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}


<div class="d-flex justify-content-between align-items-center container-fluid">
    <h1>Sliders</h1>
    <a class="btn btn-success" asp-action="Create" asp-controller="Slider">Create</a>
</div>



<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title1</th>
      <th scope="col">Image</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
      

      @foreach (var item in Model)
      {
            count++;
            <tr>
               <th scope="row">@count</th>
               <td>@item.Title1</td>
        
               <td>
                   <img src="~/upload/slider/@item.Image"  />
               </td>
               <td>
                    |<a asp-action="Update" class="btn btn-info" asp-route-Id="@item.Id" asp-controller="Slider" >Update</a>
                    |<a asp-action="Delete" class="btn btn-danger" asp-route-Id="@item.Id" asp-controller="Slider">Delete</a>
               </td>


            </tr>
      }
 
   
  </tbody>
</table>


